---
import OrderList from '../components/Profile/OrderList.astro'
import OrderIsland from '../components/Profile/Vue/OrderIsland.vue'
import ProfileIsland from '../components/Profile/Vue/ProfileIsland.vue'
import Layout from '../layouts/Layout.astro'
---

<Layout title='Профиль'>
	<section class='map-container'>
		<div class='map-head line-header mb-4 d-flex f'>
			<h1 class='ml-2'>Профиль</h1>
		</div>
		<div class='profile'>
			<ProfileIsland client:load />
			<OrderIsland client:load />
		</div>
	</section>
</Layout>

<style>
	.profile {
		display: flex;
		justify-content: start;
		gap: 30px;
		padding: 12px;
	}
</style>
