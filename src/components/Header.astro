---
import Image from 'astro/components/Image.astro'
import CoffeeIcon from '../assets/img/Coffee.svg'
import { ROUTES } from '../config/routes'


---

<header>
	<nav class='navbar navbar-expand-lg bg-body-tertiary main-text height-nav'>
		<div class='container-fluid'>
			<a class='navbar-brand' href={ROUTES.INDEX}>
				<Image src={CoffeeIcon} alt='main header logo' />
			</a>
			<button
				class='navbar-toggler'
				type='button'
				data-bs-toggle='collapse'
				data-bs-target='#navbarNav'
				aria-controls='navbarNav'
				aria-expanded='false'
				aria-label='Переключатель навигации'
			>
				<span class='navbar-toggler-icon'></span>
			</button>
			<div class='collapse navbar-collapse me-5' id='navbarNav'>
				<ul class='navbar-nav'>
					<li class='nav-item'>
						<a class='nav-link' aria-current='page' href={ROUTES.MENU}>МЕНЮ</a
						>
					</li>
					<!-- <li class='nav-item'>
						<a class='nav-link' href='bonuspage.html'>БОНУСЫ</a>
					</li> -->
					<li class='nav-item'>
						<a class='nav-link' href={ROUTES.ABOUT}>О НАС</a>
					</li>
				</ul>
			</div>
			<div>add icons</div>
		</div>
	</nav>
</header>

<style>
	.height-nav {
		height: 100px;
	}
</style>
